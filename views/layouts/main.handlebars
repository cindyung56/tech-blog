{{!-- main template to create main header, navigation bar, basic layout, link bootstrap and css to all handlebars pages --}}

<head>
  <meta charset="utf8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>The Tech Blog</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Silkscreen&display=swap"
    rel="stylesheet"
  />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" type="text/css" href="/css/style.css" />
</head>

<body>

  {{!-- title of webpage --}}
  <header class="w-100 main-background row text-white text-center p-4 m-0">
    <h1>The Tech Blog</h1>
  </header>
  
  {{!-- navigation bar --}}
  <nav class="navbar justify-content-evenly p-0">
    <div class="justify-content-evenly">
      <ul class="navbar-nav flex-row">
        <a class ="nav-link" href="/"><li id="home-link" class="nav-item rounded border border-2 border-light border-opacity-50">
          Home
        </li></a>
        <a class ="nav-link" href="/dashboard"><li id="dashboard-link" class="nav-item rounded border border-2 border-light border-opacity-50">
          Dashboard
        </li></a>
        {{!-- if the user is logged in, show the Log Out button
        if they are not logged in, show the Log In button --}}
        {{#if logged_in}}
        <a class="nav-link"><li id="logout-link" class="nav-item rounded border border-2 border-light border-opacity-50">
            Log Out
          </li></a>
        {{else}}
          <a class ="nav-link" href="/login"><li id="login-link" class="nav-item rounded border border-2 border-light border-opacity-50">
            Log In
          </li></a>
        {{/if}}
      </ul>
    </div>
  </nav>

  {{{body}}}

  {{!-- if the user is logged in, always have the script to log out ready for them --}}
  {{#if logged_in}}
    <script src="/js/logout.js"></script>
  {{/if}}
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"
  ></script>
</body>