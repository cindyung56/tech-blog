<div class="text-center my-3">
    {{!-- create a new post with this button --}}
    <button id="add-post" class="btn btn-primary"><b>+ New Post</b></button>

    {{!-- display all posts user has made (default) --}}
    <section id="your-posts" class="mt-3">
    {{#each posts as |post|}}
        <div class="user-post inline-flex w-75 my-2 p-2 rounded" data-id="{{post.id}}">
            <h4>{{post.title}}</h4>
            <p class="date-posted">{{format_date post.date_created}}</p>
        </div>
    {{/each}}
    </section>

    {{!-- automatically hidden by default, form to create a new post --}}
    <section id="create-post-div">
        <div class="border border-light border-2 m-2">
            <div class="post-title p-2">
                <h4 class="text-white">New Post</h4>
            </div>
            <div class="text-center m-2">
                <h5 class="mt-2">Title:</h5>
                <textarea id="new-post-title" class="my-2" rows="1"></textarea><br>
                <h5 class="mt-2">Content</h5>
                <textarea id="new-post-content" class="my-2" rows="4"></textarea><br>
                <button id="create-post" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </section>

    {{!-- automatically hidden by default, form to edit or delete a post
    will only show if user wants to edit an existing post they have --}}
    <section id="edit-or-delete">
        <div class="border border-light border-2 m-2">
            <div class="post-title p-2">
                <h4 class="text-white">Edit Post</h4>
            </div>
            <div class="text-center m-2">
                <h5 class="mt-2">Title:</h5>
                <textarea id="edit-post-title" class="my-2" rows="1"></textarea><br>
                <h5 class="mt-2">Content</h5>
                <textarea id="edit-post-content" class="my-2" rows="4"></textarea><br>
                <button id="update-post" class="btn btn-primary">Update</button>
                <button id="delete-post" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </section>

</div>

{{!-- link post.js script so the event listeners work --}}
<script src="/js/post.js"></script>